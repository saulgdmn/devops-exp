global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:

rule_files:

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]
  
  - job_name: "node-exporter"
    static_configs:
      - targets: ["{{ mongo_kafka_public_ip }}:9100"]
  
  - job_name: "mongo-exporter"
    static_configs:
      - targets: ["{{ mongo_kafka_public_ip }}:9216"]

  - job_name: "kafka-exporter"
    static_configs:
      - targets: ["{{ mongo_kafka_public_ip }}:9308"]

